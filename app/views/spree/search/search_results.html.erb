<% if params[:keywords] %>
  <div data-hook="search_results">
    <% if @products.empty? %>
      <h3 class="search-results-title"><%= Spree.t(:no_products_found) %></h3>
    <% else %>
      <%= render :partial => 'spree/search/search_result', :locals => { :products => @products.descend_by_updated_at, :taxon => @taxon } %>
    <% end %>
  </div>

<% else %>
  <div data-hook="search_results">
  </div>
<% end %>